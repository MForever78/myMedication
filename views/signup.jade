extends layouts/main

block body
    .container
        .signin-logo
            a(href = '/')
                img(src = '/img/signin-logo.png')
        h3.text-center Sign up
        .row
            .col-xs-offset-4.col-xs-4
                form(role = 'form', method = 'post', action = '/signup')
                    .form-group
                        label(for = 'username') Username
                        input#username.form-control(type = 'username', name = 'username')
                    .form-group
                        label(for = 'email') Email
                        input#email.form-control(type = 'email', name = 'email')
                    .form-group
                        label(for = 'password') Password
                        input#password.form-control(type = 'password', name = 'password')
                    .form-group
                        label(for = 'conform') Conform Password
                        input#conform.form-control(type = 'password')
                    button.btn.btn-primary.btn-wider.center-block(type = 'submit') create account
