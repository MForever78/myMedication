extends ./layouts/main

block body
    .container
        .signin-logo
            a(href = '/')
                img(src = '/img/signin-logo.png')
        h3.text-center Sign in
        .row.adminWrap
            .col-lg-offset-3.col-lg-3.signin-box
                form(role = 'form', method = 'post')
                    .form-group
                        label.signin-note(for = 'username') Username
                        input.form-control#username(type = 'username')
                    .form-group
                        label.signin-note(for = 'password') Password
                        input.form-control#password(type = 'password')
                    .checkbox
                        label
                            input(type = 'checkbox')
                            span Remember me
                    button.btn.btn-primary(type = 'submit') Sign in
            .col-lg-3.signin-changeRole
                p.signin-note.text-center
                    | OR Sign in as a user
                form(action = '/signin/user')
                    button.center-block.btn.btn-default(type = 'submit') Sign in
        .signin-signup.text-center
            | Not a member? <a href="#">Sign up now</a>

