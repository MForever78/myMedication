extends layouts/main

block body
    nav.navbar.navbar-inverse.navbar-fixed-top(role = 'navigation')
        .container
            .navbar-header
                a.nav-logo(href = '/')
            .collapse.navbar-collapse
                ul.nav.navbar-nav.navbar-right
                    li.active
                        a(href = '/') Home
                    li
                        a(href = 'https://mymedicationmanagement.wordpress.com/') About
                    li
                        a(href = 'https://mymedicationmanagement.wordpress.com/contect-us/') Contact

    .container-fluid.pill
        .container
            h3 #{drug.name}
            div!= description
            h3 User Evaluation
            #disqus_thread
            script(type = 'text/javascript').
                /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
                var disqus_shortname = 'mymedicationme'; // required: replace example with your forum shortname

                /* * * DON'T EDIT BELOW THIS LINE * * */
                (function() {
                    var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
                    dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
                    (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
                })();
    
    include includes/footer
