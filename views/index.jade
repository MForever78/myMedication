extends ./layouts/main.jade

block body
    nav.navbar.navbar-default.navbar-fixed-top(role = 'navigation')
        .container-fluid
            .navbar-header
                a.navbar-brand(href = '#') Logo
            .collapse.navbar-collapse#main-navbar
                ul.nav.navbar-nav.navbar-right
                    li.active
                        a(href = '#') Home
                    li
                        a(href = 'about') About
                    li
                        a(href = 'contact') Contact
                    li
                        a(href = 'categories') Categories
                    li.dropdown
                        a.dropdown-toggle(href = '#', data-toggle = 'dropdown')
                            span.sr-only Dropdown toggle
                            span.icon-bar
                            span.icon-bar
                            span.icon-bar
                        ul.dropdown-menu(role = 'menu')
                            li
                                a(href = '#') Link
                            li
                                a(href = '#') Link

    .jumbotron
        h1 Medication Management
        h1 Information System
        form(role = 'form')
            .form-group.has-feedback
                label.sr-only(for = 'searchBox') Search box
                input.form-control#searchBox(type = 'text', placeholder = 'Search by medicine name or condition...')
                span.glyphicon.glyphicon-search.form-control-feedback
            button.btn.btn-default Search
