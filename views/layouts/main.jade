doctype html
html
    head
        meta(charset = "utf-8")
        meta(http-equiv = "X-UA-Compatible", content = "IE=edge")
        title= pageTitle
        meta(name = "description", content = "A medical website")
        meta(name = "viewport", content = "width=device-width, initial-scale=1")
        // Run tests
        if showTests
            link(rel = "stylesheet", href = "/vendor/mocha.css")
        // stylesheets
        link(rel = "stylesheet", href = "/styles/main.min.css")
        // jQuery (For some certain reason, jQuery must be loaded before <body>)
        script(src = "/libs/jquery.min.js")
    
    body
        block body
        if showTests
            #mocha
            script(src = "/vendor/mocha.js")
            script(src = "/vendor/chai.js")
            script.
                mocha.ui("tdd");
                var assert = chai.assert;
            script(src = "/qa/tests-global.js")
            if pageTestScript
                script(src = "#{pageTestScript}")
            script mocha.run();
        script(src = "/libs/bootstrap.min.js")
        script(src = "/scripts/main.min.js")
